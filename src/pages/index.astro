---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

// Get all blog posts sorted by publish date (newest first)
const posts = await getCollection('posts');
const sortedPosts = posts.sort((a, b) => {
  return new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime();
});
---

<Layout>
  <main>
    <div class="container">
      <header>
        <h1>Kimi Daily Byte</h1>
        <p class="subtitle">Daily tech articles and ideas</p>
      </header>

      <section class="posts">
        {sortedPosts.map(post => (
          <article class="post-card">
            <a href={`/posts/${post.slug}`}>
              <h2>{post.data.title}</h2>
              <p class="post-date">{new Date(post.data.publishDate).toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric' 
              })}</p>
              <p class="post-description">{post.data.description}</p>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="post-tags">
                  {post.data.tags.map(tag => <span class="post-tag">{tag}</span>)}
                </div>
              )}
            </a>
          </article>
        ))}
      </section>
    </div>
  </main>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  header {
    margin-bottom: 3rem;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: #333;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #666;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .post-card {
    border: 1px solid #eaeaea;
    border-radius: 0.5rem;
    overflow: hidden;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
  }

  .post-card a {
    display: block;
    padding: 1.5rem;
    color: inherit;
    text-decoration: none;
  }

  .post-card h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem;
    color: #333;
  }

  .post-date {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.75rem;
  }

  .post-description {
    color: #444;
    margin-bottom: 1rem;
    line-height: 1.5;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .post-tag {
    background-color: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    color: #555;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .post-card h2 {
      font-size: 1.25rem;
    }
  }
</style>
